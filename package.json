{
  "name": "ac-ng",
  "version": "1.0.2",
  "license": "MIT",
  "keywords": [
    "angular",
    "atlassian connect",
    "typescript",
    "ace",
    "jira",
    "confluence"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:api && npm run build:lib && npm run build:schematics",
    "build:api": "node build-api.js",
    "build:lib": "ng build ac-ng",
    "build:schematics": "tsc -p projects/ac-ng/tsconfig.schematics.json",
    "copy:schemas": "cpx projects/ac-ng/schematics/*/schema.json dist/ac-ng/schematics",
    "copy:files": "cpx projects/ac-ng/schematics/*/files/** dist/ac-ng/schematics",
    "copy:collection": "cpx projects/ac-ng/schematics/collection.json dist/ac-ng/schematics",
    "copy:license": "cpx LICENSE dist/ac-ng",
    "copy:readme": "cpx README.md dist/ac-ng",
    "deploy:local": "cd dist/ac-ng && npm link",
    "postbuild": "npm run copy:license && npm run copy:readme && npm run copy:schemas && npm run copy:files && npm run copy:collection",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s73obrien/ac-ng"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.800.6",
    "@angular-devkit/build-ng-packagr": "^0.800.6",
    "@angular/cdk": "^8.1.2",
    "@angular/cli": "^8.0.6",
    "@angular/common": "^8.0.3",
    "@angular/compiler": "^8.0.3",
    "@angular/compiler-cli": "^8.0.3",
    "@angular/core": "^8.0.3",
    "@openapitools/openapi-generator-cli": "0.0.16-4.0.3",
    "@types/jasmine": "^3.3.16",
    "@types/jsdom": "^12.2.4",
    "@types/node": "^12.6.9",
    "cpx": "^1.5.0",
    "follow-redirects": "^1.7.0",
    "https-proxy-agent": "^2.2.3",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jsdom": "^16.5.0",
    "ng-packagr": "^5.4.3",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "tmp": "^0.1.0",
    "tsickle": "^0.36.0",
    "typescript": "^3.4.1",
    "zone.js": "^0.9.1"
  }
}
